<Window x:Class="Catalog.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catalog"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="199" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <TextBox Text="Enter the item id" Grid.Row="0"/>
        <TextBox x:Name="id" Grid.Row="1"/>
        <Button Grid.Row="2" Click="delete" Content="DELETE"/>
    </Grid>
</Window>
